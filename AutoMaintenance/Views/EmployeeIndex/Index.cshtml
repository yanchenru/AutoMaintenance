@model AutoMaintenance.ViewModels.EmployeeIndexData

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.LastName)*@
            Last Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.FirstMidName)*@
            First Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.HireDate)*@
            Hire Date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Employees)
    {
        string selectedRow = "";
        if (item.ID == ViewBag.EmployeeID)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id = item.ID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

@if (Model.Maintenances != null)
{
    <h3>Maintenances Performed by Selected Employee</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Make</th>
            <th>Date</th>
            <th>Price</th>
            <th>Type</th>
        </tr>

        @foreach (var item in Model.Maintenances)
        {
            string selectedRow = "";
            if (item.MaintenanceID == ViewBag.MaintenanceID)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.ActionLink("Select", "Index", new { maintenanceID = item.MaintenanceID })
                </td>
                <td>
                    @item.Vehicle.Make
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Type
                </td>
            </tr>
        }

    </table>
}

@if (Model.Vehicle != null)
{
    <h3>
        Vehicle Maintained
    </h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.Odometer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.Rating)
            </th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Vehicle.Make)
            </td>
            <td>
                @Html.DisplayFor(model => model.Vehicle.Model)
            </td>
            <td>
                @Html.DisplayFor(model => model.Vehicle.Year)
            </td>
            <td>
                @Html.DisplayFor(model => model.Vehicle.Odometer)
            </td>
            <td>
                @Html.DisplayFor(model => model.Vehicle.Rating)
            </td>
        </tr>
    </table>
}